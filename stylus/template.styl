//Imports
@import url("https://fonts.googleapis.com/css?family=Poppins:400,700,600")
@import url ("https://fonts.googleapis.com/css?family=Roboto:400,700,500,300")

@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot?-pauuyu')
  src url('../fonts/icomoon.eot?#iefix-pauuyu') format('embedded-opentype'),
      url('../fonts/icomoon.ttf?-pauuyu') format('truetype'),
	  url('../fonts/icomoon.woff?-pauuyu') format('woff'),
	  url('../fonts/icomoon.svg?-pauuyu#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-facebook
  &:before
    content "\e600"

.icon-youtube
  &:before
    content "\e601"

.icon-blogger
  &:before
    content "\e602"

//Vars
//Colors
MainColor = #F44336
LightColor = #FFCDD2
DarkColor = #D32F2F
AcentColor = #FFEB3B
LightText = #FFF
DarkText = rgba(0,0,0,0.8)
//Fonts
Poppins = 'Poppins', sans-serif
Roboto = 'Roboto', sans-serif

*, *::after, *::before
	box-sizing border-box

body
	background-color LightText
	color DarkText
	font-family Roboto
	font-size 16px
	text-align center
	
h1, h2, h3
	font-family Poppins
	margin 0
	padding 0

h1
	color MainColor
	
h2
	color LightColor
	font-weight 600
	font-size 

h3
	font-weight 400
	
#mainfooter
	background-color DarkColor
	color LightText
	font-weight semi-bold
	margin 0
	overflow hidden
	text-align center
	p 
		margin 0.5
	
	

#mainheader
	background-color MainColor
	background-image url(../img/logo-wu-hsing-chuan.png), url(../img/scales-mobile.png)
	background-position 2% 25%, center
	background-repeat no-repeat
	background-size 100px, cover
	height 110px
	margin-top 50px
	position relative
	text-align left
	.header__hgroup
		position absolute
		right 10px
		top 25%
		.header__hgroup__maintitle
			color LightText
			font-size 25px
			margin 0
			padding 0
		.header__hgroup__secondtitle
			color LightText
			display none
			margin 0
			padding 0

#mainnav
	display none
	text-align left
	
#mobilenav
	background-color DarkColor
	position fixed
	text-align center
	font-size 20px
	top 0
	width 100%
	z-index 2
	.mobilenav__menu
		cursor pointer
		display inline-block
		left 0
		padding 10px 20px
		position absolute
		#mobilenav__menu__line-1, #mobilenav__menu__line-2, #mobilenav__menu__line-3
			background-color white
			height 2px
			margin 5px 0
			transition all .7s ease
			width 30px
	.mobilenav__title
		color LightText
		display inline-block
		font-weight 600px
		margin 0
		padding .3em

#mobilelinks
	background-color MainColor
	font-family Poppins
	font-size 20px
	height 100%
	transition all .5s ease 
	position fixed
	top 52px
	left -250px
	z-index 2
	.mobilelinks__list
		margin 0
		padding 0
		text-align left
		.mobilelinks__list__item
			list-style none
			a
				color LightText
				display block
				padding 1em 5em 1em .5em
				text-decoration none
				
				
#menudarker
	background-color rgba(0,0,0,0.5)
	display none
	height 100%
	position fixed
	width 100%
	z-index 1


.raised-button
	background-color AcentColor
	border-radius 3px
	display inline-block
	transition all .5s ease
	a
		color DarkText
		display block
		font-size 16px
		padding 10px 5px
		text-decoration none
	&:hover
		box-shadow rgba(0,0,0,0.5) 1px 1px 5px
		transition all .2s ease


.content-card
	margin 10px 0 0 0
	text-align center
	h2
		font-size 30px
		margin 0
		padding 0
	p 
		display inline-block
		letter-spacing 1px
		line-height 180%
		max-width 35em
		padding 0 .3em
.dark
	h1, h2, h3
		color #555
	p 
		color DarkText
		
.light 
	h1, h2, h3
		color LightText
	p 
		color LightText
		
.ccontainer
	display inline-block
	max-width 1700px
	
.scroll-up
	background-color MainColor
	border-radius 100%
	bottom -10%
	cursor pointer
	position fixed
	right 2%
	transition all .5s ease-in
	.scroll-up__button
		display block
		padding 5px
		transition all .7s ease
	.scroll-up__line1, .scroll-up__line2
		background-color white
		height 2px
		margin 5px 0
		transition all 1s ease
		width 30px
	.scroll-up__line1
		height 3px
		left 9px
		position absolute
		top 18px
		width 20px
	.scroll-up__line2
		height 3px
		position absolute
		right 9px
		top 18px
		width 20px

.ink
  display block
  position absolute
  background AcentColor
  border-radius 100%
  transform scale(0)
  &.animate
    animation ripple 0.65s linear
    
@keyframes ripple {
		100% {opacity: 0; transform: scale(2.5);}
}
	

/*////////Tablet Styling////////*/
@media (min-width: 845px)
	body
		font-size 20px 
		
	#mainheader
		overflow hidden
		background-image url(../img/logo-wu-hsing-chuan.png), url(../img/scales.png)
		background-position 2% 25%, center
		background-repeat no-repeat
		background-size 100px, cover
		margin-top 120px
		.header__hgroup
			left 150px
			position absolute
			top 10%
			.header__hgroup__maintitle
				color LightText
				font-size 35px
				margin 0
				padding 0
			.header__hgroup__secondtitle
				display block
				font-size 20px
	
	#mobilelinks
		display none
	
	#menudarker
		display none !important
				
	#mainnav
		background-color DarkColor
		display block
		font-family Poppins
		font-weight 400
		position fixed
		overflow hidden
		top 0
		width 100%
		z-index 2
		.mainnav__logo
			display none
		.mainnav__list
			margin 0
			padding 0
			.mainnav__list__item
				display inline-block
				transition all .5s ease-in
				.mainnav__list__item__link
					color LightText
					display block
					padding 45px 2rem
					text-decoration none
		.mainnav__social
			position absolute
			right 30px 
			top 32px
			margin 0
			padding 0
			.mainnav__social__button
				display inline-block
				background-color #DDD
				border-radius 100%
				box-shadow rgba(0,0,0,0.3) 3px 3px 5px
				transition all 0.5s ease-out
				.mainnav__social__button__link
					text-decoration none
					color DarkText
					display block
					font-size 35px
					padding 10px
		.facebook-link
			&:hover
				background-color #3B5998
				transition all 0.2s ease-in
				a 
				 color LightText !important
		.blogger-link
			&:hover
				background-color #f9760b
				transition all 0.2s ease-in
				a 
				 color LightText !important
		.youtube-link
			&:hover
				background-color #e62117
				transition all 0.2s ease-in
				a 
				 color LightText !important
	
	#mobilenav
		display none
		
	.content-card
		p
			font-size 25px
		h2
			font-size 40px
												
/*////////Desktop Styling////////*/
@media (min-width: 1255px)
	#mainheader
		background-image url(../img/logo-wu-hsing-chuan.png), url(../img/hung-gar.png), url(../img/tai-chi.png), url(../img/pa-kua.png), url(../img/wing-chun.png), url(../img/bak-siu-lam.png), url(../img/scales.png)
		background-position 2% 25%, 55% 45%, 68% 45%, 80% 45%, 89% 45%, 99% 45%, 45% 20%
		background-repeat no-repeat
		background-size 150px, 120px, 120px, 120px, 120px, 120px, auto
		height 180px
		position relative
		.header__hgroup
			left 180px
			position absolute
			top 10%
			.header__hgroup__maintitle
				color LightText
				font-size 50px
				margin 0
				padding 0
			.header__hgroup__secondtitle
				display block
				font-size 30px
	
	#mainnav
		font-size 20px
		.mainnav__logo
			position absolute
			width 100px
			display block
			top 100px
			left 24px
			margin-top 50px
			transition all .5s ease
		.mainnav__list
			padding 0 0 0 1rem
			transition all .5s ease
			a
				position relative
				outline none
				text-decoration none
				&:hover
					outline none
				&:focus
					outline none
					
	.hover-effect
		.mainnav__list 
			a
				&::after
					border 2px solid rgba(0,0,0,0.1)
					border-radius 50%
					border-width 6px
					content ''
					height 100px
					height 90px
					left 50%
					opacity 0
					position absolute
					top 50%
					transform translateX(-50%) translateY(-50%) scale(0.2)
					transform translateX(-50%) translateY(-50%) scale(0.8)
					transition transform 0.3s, opacity 0.3s
					width 100px
					width 90px
				&::before
					border 2px solid rgba(0,0,0,0.1)
					border-radius 50%
					content ''
					height 100px
					left 50%
					opacity 0
					position absolute
					top 50%
					transform translateX(-50%) translateY(-50%) scale(0.2)
					transition transform 0.3s, opacity 0.3s
					width 100px	
				&:hover::before, &:hover::after, &:focus::before, &:focus::before
					opacity 1
					transform translateX(-50%) translateY(-50%) scale(1)

@media (min-width: 1700px)
	#mainheader
		background-position-x 2%, 50%, 63%, 75%, 85%, 97%, 45%
		background-position-y 25%, 45%, 45%, 45%, 45%, 45%, 35%
		background-size 150px, 165px, 165px, 165px, 165px, 165px, auto
		.header__hgroup
			left 250px
			.header__hgroup__maintitle
				font-size 60px
			.header__hgroup__secondtitle
				font-size 30px