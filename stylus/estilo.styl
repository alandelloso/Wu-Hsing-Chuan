//Colors
MainColor = #F44336
LightColor = #FFCDD2
DarkColor = #D32F2F
AcentColor = #FFEB3B
LightText = #FFF
DarkText = rgba(0,0,0,0.8)

//Fonts
Poppins = 'Poppins', sans-serif
Roboto = 'Roboto', sans-serif
	
//CSS Mobile
.filial
	margin .3em
	background-color #EEE
	text-align center
	width 350px
	margin .5em auto .5em auto
	border-radius 30px
	&:nth-child(odd)
		background-color #DDD
	.filial__titulo
		font-size 25px
		font-weight bold
	.filial__foto-instructor
		width 100px
		border-radius 100%
		margin 0
	.filial__sifu
		font-size 18px
		font-weight 600
		margin 0
	.filial__horario
		font-size 16px
		margin 0
	.filial__direccion
		font-size 16px
		margin 0
	.filial__localidad
		font-size 16px
		font-weight bold
		margin 0
		
.filiales-localidad
	background-color #444
	color LightText !important
	
.impar
	visibility hidden

.linaje 
	padding 1em
	background-color #444
	margin 0
	background-image url(../img/dragon-dark.png)
	background-position center
	background-repeat no-repeat
	background-size cover
	.linaje-same-cat
		display inline-block

.linaje__arrow
	text-align center
	display block
	.linaje__arrow__c1
		width 20px
		height 20px
		border-radius 100%
		background-color #FFF
		display inline-block
	.linaje__arrow__c2
		width 30px
		height 30px
		border-radius 100%
		background-color #FFF
		display inline-block
	.linaje__arrow__arrow
		width 0 
		height 0 
		border-left 20px solid transparent
		border-right 20px solid transparent
		border-top 20px solid #FFF
		display inline-block
		margin-right 2.5px

.maestro
	margin 1em
	.maestro__foto
		width 150px
		border-radius 100%

.title
	padding 1em
	h1
		color LightText
		font-size 50px

@media (min-width: 845px)
	.filiales-flex
		display flex
		flex-flow row wrap
		padding 0 1em
		margin 0 auto
		max-width 1300px
		justify-content space-between
		.filial
			flex-grow 0
			margin .5em 0 .5em 0
				
